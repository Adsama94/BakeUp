<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardColor"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/rb_pie"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/nutella_pie"
        android:textColor="@color/secondaryText"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/rb_brownie"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/brownies"
        android:textColor="@color/secondaryText"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/rb_yellow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/yellow_cake"
        android:textColor="@color/secondaryText"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/rb_cheesecake"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="@string/cheesecake"
        android:textColor="@color/secondaryText"
        android:textSize="20sp" />

</LinearLayout>